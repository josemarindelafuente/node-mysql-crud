<%- include('template/header'); %>
<%- include('template/navbar'); %>
<%- include('template/sidebar'); %>


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  
  <%- include('template/breadcrumb', {module: 'Editar Usuario'}); %>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">




<% if (user) { %> 
        <form action="/updateUser" method="post">

            <input hidden id="id" name="id" value="<%= user.id %>">

            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= user.name  %>" autofocus>
              <div class="form-text">nombre de usuario.</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= user.email  %>" >
                <div class="form-text">Correo electrónico del usuario.</div>
            </div>

            <div class="mb-3">
                <label for="roles" class="form-label">Datalist example</label>
                <input class="form-control" list="listaDeRoles" id="roles" name="roles" placeholder="Buscar..." value="<%= user.rol  %>">
                <datalist id="listaDeRoles">
                  <option value="Admin">
                  <option value="Suscriptor">
                  <option value="Editor">
                </datalist>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>

            <button type="submit" class="btn btn-primary">Editar</button>
            <a href="/users" class="btn btn-secondary">Cancelar</a>

          </form>
<% } %>    

</div>
<!-- /.col -->
</div>
<!-- /.row -->
</div>
<!-- /.container-fluid -->
</section>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->




<%- include('template/footer'); %>